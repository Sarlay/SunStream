<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:icon="@color/transparent" />

    <Preference
        android:key="@string/radarr_url_key"
        android:title="@string/radarr_url_pref"
        android:icon="@drawable/ic_baseline_play_arrow_24" />
    <Preference
        android:key="@string/radarr_credentials"
        android:title="@string/radarr_credentials_title"
        android:icon="@drawable/video_locked"
        android:summary="@string/radarr_credentials_summary"/>
    <Preference
        android:key="@string/radarr_root_folder_path"
        android:title="@string/radarr_root_folder_path_title"
        android:icon="@drawable/video_locked"
        android:summary="@string/radarr_root_folder_path_summary"/>
    <Preference
        android:key="@string/radarr_info"
        android:title="@string/radarr_info_title"
        android:icon="@drawable/ic_baseline_play_arrow_24"
        android:summary="@string/radarr_info_summary">
